<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/urundetay">

    <Button
        android:id="@+id/fiyat_artan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/uye_buton"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Fiyat(Artan)"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toTopOf="@+id/fiyat_azalan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fiyat_azalan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/uye_buton"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Fiyat(Azalan)"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toTopOf="@+id/indirim_orani"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiyat_artan" />

    <Button
        android:id="@+id/indirim_orani"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/uye_buton"
        android:fontFamily="@font/alfa_slab_one"
        android:text="İndirim Oranı"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiyat_azalan" />
</android.support.constraint.ConstraintLayout>